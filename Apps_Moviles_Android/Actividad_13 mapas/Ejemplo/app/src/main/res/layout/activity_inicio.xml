<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".Inicio">

    <TextView
        android:id="@+id/show_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Donde Quieres Ir?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:fontFamily="monospace"
        />

    <EditText
        android:id="@+id/name_country"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Digite la latitud"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"

        />

    <EditText
        android:id="@+id/name_country2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Digite la longuitud"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"

        />

    <Button
        android:id="@+id/Btn_buscar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Buscar por numero"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@color/teal_200"
        />

</RelativeLayout>